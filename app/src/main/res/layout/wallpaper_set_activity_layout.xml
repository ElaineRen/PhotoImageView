<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tv_btn_set_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置wallpaper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tv_btn_clear_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除桌面锁屏"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_btn_set_wallpaper"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/tv_btn_set_lock_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置锁屏wallpaper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_btn_set_wallpaper" />
    <Button
        android:id="@+id/tv_btn_clear_lock_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除锁屏壁纸"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_btn_set_lock_wallpaper"
        app:layout_constraintTop_toBottomOf="@+id/tv_btn_set_wallpaper" />

    <Button
        android:id="@+id/tv_btn_get_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得壁纸 flag"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_btn_set_lock_wallpaper" />

    <TextView
        android:id="@+id/tv_get_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flag:"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_btn_get_flag"
        app:layout_constraintTop_toTopOf="@+id/tv_btn_get_flag"
        app:layout_constraintBottom_toBottomOf="@+id/tv_btn_get_flag"
        />

    <Button
        android:id="@+id/tv_btn_dynic_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用动态壁纸api"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_btn_get_flag" />
</androidx.constraintlayout.widget.ConstraintLayout>